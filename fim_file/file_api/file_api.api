type ImageRequest {}

type ImageResponse {
	Url string `json:"url"`
}

type ImageShowRequest {
	ImageType string `path:"imageType"`
	ImageName string `path:"imageName"`
}

type FileRequest {
	UserID uint `header:"User-ID"`
}

type FileResponse {
	Src string `json:"src"`
}

service file {
	@handler image
	post /api/file/image (ImageRequest) returns (ImageResponse) //图片上传

	@handler file
	post /api/file/file (FileRequest) returns (FileResponse) //文件上传

	@handler image_show
	get /api/file/uploads/:imageType/:imageName (ImageShowRequest)
}

